    "version": "2.0.0",
    "tasks": [
        {
            "label": "build debug",
            "type": "shell",
            "group": "build",
            "command": "/home/peroket/projects/emsdk/upstream/emscripten/em++",
            "args": [
                "--preload-file",
                "shaders",
                "-o",
                "build/${workspaceFolderBasename}.html",
                "-std=c++17",
                "-Iinclude/",
                "-O0",
                "-g",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "-Werror",
                "$(find",
                ".",
                "-type",
                "f",
                "-name",
                "*.cpp)"
            ]
        },
        {
            "label": "build release",
            "type": "shell",
            "group": "build",
            "command": "/home/peroket/projects/emsdk/upstream/emscripten/em++",
            "args": [
                "--preload-file",
                "shaders",
                "-o",
                "build/${workspaceFolderBasename}.html",
                "-std=c++17",
                "-Iinclude/",
                "-O3",
                "--llvm-lto",
                "3",
                "--closure",
                "1",
                "$(find",
                ".",
                "-type",
                "f",
                "-name",
                "*.cpp)"
            ]
        },
        {
            "label": "copy html",
            "type": "shell",
            "problemMatcher": [],
            "command": "cp build/*.html /mnt/c/Users/Adrien/Documents/emscripten_test/"
        },
        {
            "label": "copy js",
            "type": "shell",
            "problemMatcher": [],
            "command": "cp build/*.js /mnt/c/Users/Adrien/Documents/emscripten_test/"
        },
        {
            "label": "copy wasm",
            "type": "shell",
            "problemMatcher": [],
            "command": "cp build/*.wasm /mnt/c/Users/Adrien/Documents/emscripten_test/"
        },
        {
            "label": "copy data",
            "type": "shell",
            "problemMatcher": [],
            "command": "cp build/*.data /mnt/c/Users/Adrien/Documents/emscripten_test/"
        },
        {
            "label": "build and copy debug",
            "dependsOrder": "sequence",
            "group": "build",
            "problemMatcher": [],
            "dependsOn": [
                "build debug",
                "copy html",
                "copy js",
                "copy wasm",
                "copy data"
            ]
        },
        {
            "label": "build and copy release",
            "dependsOrder": "sequence",
            "group": "build",
            "problemMatcher": [],
            "dependsOn": [
                "build release",
                "copy html",
                "copy js",
                "copy wasm",
                "copy data"
            ]
        },
